                                    <TextBlock Text="• Авто - 150 у.е/сутки" FontSize="19" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Margin="24,0,24,0"/>
                                    <TextBlock Text="• Мотоцикл - 135 у.е/сутки" FontSize="19" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Margin="24,0,24,5"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <Border Background="#42036F" Margin="10,20,10,0">
                                <StackPanel>
                                    <Label Content="Крытая парковка" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Margin="10,10,10,10"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#5F2580" Margin="10,0,10,0">
                                <Image Source="D:\Учеба\ООП\Курсач\Крытая парковка.jpg" Margin="10,10,10,10"/>
                            </Border>
                            <Border Background="#5F2580" Margin="10,2,10,0">
                                <TextBlock Text="Просторное место парковки. Удобный въезд и выезд" FontSize="25" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Margin="24,10,23.6,10"/>
