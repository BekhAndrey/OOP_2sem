                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid Background="#680BAB" ShowGridLines="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30*"/>
                            <ColumnDefinition Width="35*"/>
                            <ColumnDefinition Width="35*"/>
