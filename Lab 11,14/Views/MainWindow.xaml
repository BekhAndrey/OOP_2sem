                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                                        <DatePicker x:Name="dp1"  SelectedDate="{Binding Entry}"  SelectedDateChanged="dp1_SelectedDateChanged" Margin="20,5,10,0" Width="160"
