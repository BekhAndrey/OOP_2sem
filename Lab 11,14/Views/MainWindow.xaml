                <TabItem.Header>
                    <StackPanel Orientation="Vertical" Width="250">
                        <iconPacks:PackIconMaterial Kind="Offer"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Foreground="#41046F"/>
