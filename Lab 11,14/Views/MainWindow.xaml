                                                    SelectedDateChanged="dp2_SelectedDateChanged"
                                                    FontSize="18"
                                                    materialDesign:TextFieldAssist.UnderlineBrush="White"
                                                    BorderBrush="White"
                                                    Foreground="LightGray"
                                                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                                    </StackPanel>
